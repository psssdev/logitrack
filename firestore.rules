rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() { 
      return request.auth != null; 
    }

    // Regra padrão para bloquear tudo, a menos que permitido explicitamente abaixo.
    match /{document=**} { 
      allow read, write: if false; 
    }

    // Permite que usuários autenticados leiam documentos da coleção 'companies'.
    // Isso é crucial para permitir consultas em subcoleções.
    match /companies/{companyId} {
      allow read: if isAuthed();
    }

    // Permite que usuários autenticados leiam documentos da subcoleção 'orders'.
    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if isAuthed();
    }

    // Regras para as outras subcoleções para garantir o funcionamento completo do app.
    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if isAuthed();
    }
    
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if isAuthed();
    }

    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if isAuthed();
    }

    match /companies/{companyId}/origins/{originId} {
      allow read, write: if isAuthed();
    }
    
    match /users/{userId} {
        allow read, write: if isAuthed();
    }
  }
}