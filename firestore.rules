rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (get, update, delete) if request.auth.uid == userId
     * @allow (create) if request.auth.uid == request.resource.data.id
     * @deny (get, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Allows company users to manage their clients.
     * @path /companies/{companyId}/clients/{clientId}
     * @allow (create, get, list, update, delete) if request.auth.uid != null
     * @deny (create, get, list, update, delete) if request.auth.uid == null
     * @principle Enforces company-level access control for client data.
     */
    match /companies/{companyId}/clients/{clientId} {
      function isSignedIn() {
        return request.auth != null;
      }
      // Define a function to check if the user belongs to the company
      function belongsToCompany(companyId) {
          return get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.exists;
      }
      allow get: if isSignedIn() && belongsToCompany(companyId);
      allow list: if isSignedIn() && belongsToCompany(companyId);
      allow create: if isSignedIn() && belongsToCompany(companyId);
      allow update: if isSignedIn() && belongsToCompany(companyId);
      allow delete: if isSignedIn() && belongsToCompany(companyId) && resource != null;
    }

    /**
     * @description Allows company users to manage their origins.
     * @path /companies/{companyId}/origins/{originId}
     * @allow (create, get, list, update, delete) if request.auth.uid != null
     * @deny (create, get, list, update, delete) if request.auth.uid == null
     * @principle Enforces company-level access control for origin data.
     */
    match /companies/{companyId}/origins/{originId} {
       function isSignedIn() {
        return request.auth != null;
      }
      // Define a function to check if the user belongs to the company
      function belongsToCompany(companyId) {
          return get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.exists;
      }
      allow get: if isSignedIn() && belongsToCompany(companyId);
      allow list: if isSignedIn() && belongsToCompany(companyId);
      allow create: if isSignedIn() && belongsToCompany(companyId);
      allow update: if isSignedIn() && belongsToCompany(companyId);
      allow delete: if isSignedIn() && belongsToCompany(companyId) && resource != null;
    }
  }
}