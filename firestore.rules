rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get the user's companyId from their profile
    function getUserCompanyId(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.companyId;
    }

    // Users can read their own profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      // Allow creation of user profile during signup, but not modification of role/company by the user
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId && request.resource.data.keys().hasOnly(['displayName', 'email']);
    }

    // Companies can be read by anyone authenticated (e.g., for branding on login pages)
    // Write access should be restricted, perhaps only to admins via cloud functions in a real scenario
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && getUserCompanyId(request.auth.uid) == companyId;
    }

    // All subcollections of a company are protected by the same multi-tenancy rule
    match /companies/{companyId}/{document=**} {
      allow read, write: if request.auth != null && getUserCompanyId(request.auth.uid) == companyId;
    }
  }
}
