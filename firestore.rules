
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em todos os documentos se o usuário estiver autenticado.
    // Esta é uma regra ampla para diagnóstico e desenvolvimento.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
