rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() { 
      return request.auth != null; 
    }

    // Função para obter o companyId do perfil do usuário.
    // O perfil do usuário é esperado em /users/{uid}
    function getUserCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }

    // Função para verificar se um usuário é membro da empresa que está tentando acessar.
    function isCompanyMember(companyId) {
      return isAuthed() && getUserCompanyId() == companyId;
    }

    // Regra padrão para bloquear tudo, a menos que permitido explicitamente abaixo.
    match /{document=**} { 
      allow read, write: if false; 
    }
    
    // Permite que um usuário leia/escreva seu próprio perfil.
    match /users/{userId} {
      allow read, write: if isAuthed() && request.auth.uid == userId;
    }

    // Permite que membros da empresa leiam o documento da empresa (pai).
    // A escrita também é permitida para a página de configurações.
    match /companies/{companyId} {
      allow read, write: if isCompanyMember(companyId);
    }

    // Permite acesso total às subcoleções se o usuário for membro da empresa.
    match /companies/{companyId}/{subcollection}/{docId=**} {
      allow read, write: if isCompanyMember(companyId);
    }
  }
}
