rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read company details.
    // This is required for subcollection queries.
    match /companies/{companyId} {
      allow read: if request.auth != null;
    }

    // Allow full access to user profiles for authenticated users.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Allow full access to orders for authenticated users.
    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Allow full access to clients for authenticated users.
    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow full access to client addresses.
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if request.auth != null;
    }

    // Allow full access to drivers.
    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if request.auth != null;
    }

    // Allow full access to origins.
    match /companies/{companyId}/origins/{originId} {
      allow read, write: if request.auth != null;
    }
  }
}