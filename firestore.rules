
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    // Acesso geral para qualquer utilizador autenticado a todos os documentos.
    // Esta regra é permissiva e adequada para um ambiente de empresa única onde
    // todos os utilizadores autenticados devem ter acesso total.
    match /{path=**} {
      allow read, write: if isUserAuthenticated();
    }
  }
}
