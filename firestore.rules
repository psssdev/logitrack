rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra global: Permite acesso de leitura e escrita a qualquer documento
    // para qualquer usuário autenticado.
    // Esta é uma regra permissiva para fins de desenvolvimento.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
