
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    // Regra específica para perfis de utilizador
    match /users/{userId} {
      allow read, write: if isUserAuthenticated() && request.auth.uid == userId;
    }

    // Regra para coleções na raiz (permite ler/listar a coleção e ler/escrever documentos)
    match /{collection}/{document} {
      allow read, write: if isUserAuthenticated();
    }
    
    // Regra para subcoleções (permite ler/listar a subcoleção e ler/escrever documentos)
    match /{collection}/{document}/{subcollection}/{subdocument} {
      allow read, write: if isUserAuthenticated();
    }
  }
}
