
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && getUserCompanyId() == companyId;
    }
    
    function allowedCompanyKeys() {
        return [
            'nomeFantasia', 'codigoPrefixo', 'linkBaseRastreio', 'cnpj', 'cep', 
            'logradouro', 'numero', 'bairro', 'cidade', 'estado', 'logoUrl',
            'msgRecebido', 'msgEmRota', 'msgEntregue', 'msgChegueiCidade', 'updatedAt'
        ];
    }

    function isValidCompanyUpdate() {
      return request.resource.data.keys().hasOnly(allowedCompanyKeys());
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    match /companies/{companyId} {
      allow get: if isSignedIn();
      allow update: if isCompanyMember(companyId) && isValidCompanyUpdate();
      allow list, create, delete: if false;
    }

    // Rule for orders subcollection
    match /companies/{companyId}/orders/{orderId} {
        allow list, read, write: if isCompanyMember(companyId);
    }
    
    // Rule for clients subcollection
    match /companies/{companyId}/clients/{clientId} {
        allow list, read, write: if isCompanyMember(companyId);
    }
    
    // Rule for addresses nested under clients
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
        allow list, read, write: if isCompanyMember(companyId);
    }

    // Rule for origins subcollection
    match /companies/{companyId}/origins/{originId} {
        allow list, read, write: if isCompanyMember(companyId);
    }
  }
}
