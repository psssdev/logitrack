rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa leia a coleção de encomendas.
    // Esta é uma regra temporária e insegura, apenas para diagnóstico.
    match /companies/{companyId}/orders/{orderId} {
      allow read: if true;
    }
  }
}
