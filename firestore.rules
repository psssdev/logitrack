
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get companyId from the user's custom claims
    function getUserCompanyId() {
      return request.auth.token.companyId;
    }

    // Helper function to check if a user is authenticated
    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Rule for the user's own profile document
    match /users/{userId} {
      // Allow a user to read their own profile.
      allow get: if isUserAuthenticated() && request.auth.uid == userId;
      // Creation/updates should happen on the server with admin privileges, not on the client.
      allow write: if false; 
    }

    // This single rule protects all subcollections within a company document
    match /companies/{companyId}/{document=**} {
      allow read, write: if isUserAuthenticated() && getUserCompanyId() == companyId;
    }

    // Explicitly deny writes to the top-level company document from the client
    match /companies/{companyId} {
       allow read: if isUserAuthenticated() && getUserCompanyId() == companyId;
       allow create, update, delete: if false;
    }
  }
}
