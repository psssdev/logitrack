rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() { 
      return request.auth != null; 
    }

    // Regra padrão para bloquear tudo, a menos que permitido explicitamente abaixo.
    match /{document=**} { 
      allow read, write: if false; 
    }

    // Permite que usuários autenticados leiam o documento da empresa (pai).
    // Isso é crucial para permitir consultas em suas subcoleções.
    match /companies/{companyId} {
      allow read: if isAuthed();
      allow write: if isAuthed(); // Permitindo escrita para a página de configurações
    }

    // Permite leitura e escrita na subcoleção de encomendas para usuários autenticados.
    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if isAuthed();
    }

    // Mantém as regras para as outras subcoleções para garantir a funcionalidade do app.
    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if isAuthed();
    }
    
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if isAuthed();
    }

    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if isAuthed();
    }

    match /companies/{companyId}/origins/{originId} {
      allow read, write: if isAuthed();
    }
    
    match /users/{userId} {
      allow read, write: if isAuthed();
    }
  }
}
