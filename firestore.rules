rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // As regras abaixo permitem que qualquer usuário autenticado leia e escreva
    // em qualquer documento dentro das subcoleções da empresa.
    // A permissão de 'get' em /companies/{companyId} é necessária para
    // permitir consultas em suas subcoleções.
    
    match /companies/{companyId} {
      allow read: if isSignedIn();
    }

    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if isSignedIn();
    }
    
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if isSignedIn();
    }
    
    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if isSignedIn();
    }
    
    match /companies/{companyId}/origins/{originId} {
      allow read, write: if isSignedIn();
    }
  }
}
