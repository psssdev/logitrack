rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Permite que um usuário leia e escreva apenas em seu próprio perfil.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // PERMISSÃO CRÍTICA: Permite a LEITURA do documento da empresa.
    // Isso é necessário para que as consultas às subcoleções funcionem.
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
    }

    // Permite que qualquer usuário autenticado leia e escreva na subcoleção de encomendas.
    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if isSignedIn();
    }

    // Permite que qualquer usuário autenticado leia e escreva na subcoleção de clientes.
    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if isSignedIn();
    }
    
    // Permite que qualquer usuário autenticado leia e escreva na subcoleção de endereços de clientes.
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if isSignedIn();
    }

    // Permite que qualquer usuário autenticado leia e escreva na subcoleção de origens.
    match /companies/{companyId}/origins/{originId} {
      allow read, write: if isSignedIn();
    }

    // Permite que qualquer usuário autenticado leia e escreva na subcoleção de motoristas.
    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if isSignedIn();
    }
  }
}
