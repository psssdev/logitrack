
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    // Regra para a coleção 'users'
    // Apenas o proprietário do perfil pode ler ou escrever no seu próprio documento.
    // Esta regra deve vir primeiro para ter prioridade sobre a regra mais geral abaixo.
    match /users/{userId} {
      allow read, write: if isUserAuthenticated() && request.auth.uid == userId;
    }

    // Regra geral para todos os outros documentos, incluindo subcoleções.
    // O padrão {document=**} corresponde a qualquer documento em qualquer coleção ou subcoleção.
    match /{document=**} {
      allow read, write: if isUserAuthenticated();
    }
  }
}
