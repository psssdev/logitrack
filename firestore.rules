
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function allowedCompanyKeys() {
        return [
            'nomeFantasia', 'codigoPrefixo', 'linkBaseRastreio', 'cnpj', 'cep', 
            'logradouro', 'numero', 'bairro', 'cidade', 'estado', 'logoUrl',
            'msgRecebido', 'msgEmRota', 'msgEntregue', 'msgChegueiCidade', 'updatedAt'
        ];
    }

    function isValidCompanyUpdate() {
      return request.resource.data.keys().hasOnly(allowedCompanyKeys());
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    match /companies/{companyId} {
      allow get: if isSignedIn();
      allow update: if isSignedIn() && isValidCompanyUpdate();
      allow list, create, delete: if false;

      // Simplificando as regras para permitir acesso a usu√°rios autenticados
      match /orders/{orderId} {
          allow read, write: if isSignedIn();
      }
      
      match /clients/{clientId} {
          allow read, write: if isSignedIn();

          match /addresses/{addressId} {
              allow read, write: if isSignedIn();
          }
      }

      match /origins/{originId} {
          allow read, write: if isSignedIn();
      }
    }
  }
}
