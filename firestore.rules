rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Regra para a coleção de usuários
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Regra para a coleção de empresas (permite ler o documento pai)
    match /companies/{companyId} {
      allow read: if isSignedIn();
    }

    // Regras explícitas e não aninhadas para cada subcoleção
    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if isSignedIn();
    }
    
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/origins/{originId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if isSignedIn();
    }
    
    // Regra para a subcoleção de usuários dentro da empresa, caso exista
    match /companies/{companyId}/users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
