
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    // Users can only read and write their own profile
    match /users/{userId} {
      allow read, write: if isUserAuthenticated() && request.auth.uid == userId;
    }
    
    // Any authenticated user can interact with the data collections.
    // This simplifies the rules for a single-company setup.
    match /{collection}/{docId} {
       allow read, write: if isUserAuthenticated();
    }

     match /{collection}/{docId}/{subcollection}/{subdocId} {
       allow read, write: if isUserAuthenticated();
    }
  }
}
