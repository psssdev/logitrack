rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Bloqueio padrão para segurança
    match /{document=**} {
      allow read, write: if false;
    }

    // Permite que usuários logados leiam o documento da empresa.
    // Isso é necessário para consultar as subcoleções.
    match /companies/{companyId} {
      allow read: if isSignedIn();
    }
    
    // Regras explícitas para cada subcoleção
    match /companies/{companyId}/users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /companies/{companyId}/orders/{orderId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/clients/{clientId} {
      allow read, write: if isSignedIn();
    }
    
    match /companies/{companyId}/clients/{clientId}/addresses/{addressId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/origins/{originId} {
      allow read, write: if isSignedIn();
    }

    match /companies/{companyId}/drivers/{driverId} {
      allow read, write: if isSignedIn();
    }
  }
}
