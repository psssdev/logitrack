rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserCompanyId(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.companyId;
    }

    function isUserInCompany(companyId) {
      return isUserAuthenticated() && getUserCompanyId(request.auth.uid) == companyId;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      // Deny direct client-side creation. Must be done via trusted server (API route).
      allow create: if false; 
      // Users can only update their own displayName. companyId/role are protected.
      allow update: if isOwner(userId) && request.resource.data.keys().hasOnly(['displayName', 'email']);
    }

    match /companies/{companyId} {
      // Allow reads if the user belongs to the company.
      // Deny direct client-side creation/writes. Must be done via trusted server (API route).
      allow read: if isUserInCompany(companyId);
      allow create, update, delete: if false;
    }

    // This rule applies to all sub-collections of a company (e.g., orders, clients).
    match /companies/{companyId}/{document=**} {
      allow read, write: if isUserInCompany(companyId);
    }
  }
}
