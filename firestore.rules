rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isCompanyMember(companyId) {
      let user = getUser(request.auth.uid);
      return isSignedIn() && user.companyId == companyId;
    }

    // Rules
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /companies/{companyId} {
      // Company config can be read by its members
      allow read, update: if isCompanyMember(companyId);

      // Subcollections can be accessed by company members
      match /orders/{orderId} {
        allow read, write: if isCompanyMember(companyId);
      }
      match /clients/{clientId} {
        allow read, write: if isCompanyMember(companyId);
      }
      match /origins/{originId} {
        allow read, write: if isCompanyMember(companyId);
      }
       match /clients/{clientId}/addresses/{addressId} {
        allow read, write: if isCompanyMember(companyId);
      }
    }
  }
}
