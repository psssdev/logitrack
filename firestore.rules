rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    function getUserCompanyId() {
      // Correctly points to the /users collection as per the app's structure
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }

    function isCompanyMember(companyId) {
      return isAuthed() && getUserCompanyId() == companyId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own profile
    match /users/{userId} {
      allow read, write: if isAuthed() && request.auth.uid == userId;
    }

    // Allow company members to read the parent company document.
    // This is crucial for subcollection queries to work.
    match /companies/{companyId} {
      allow read: if isCompanyMember(companyId);
      // Allow company admins to update company settings (can be refined later)
      allow update: if isCompanyMember(companyId); 
    }
    
    // Allow company members to read and write most documents in subcollections.
    match /companies/{companyId}/{subcollection}/{docId} {
      allow read, write: if isCompanyMember(companyId);
    }

    // Explicitly allow reading financialEntries for the seat check logic.
    match /companies/{companyId}/financialEntries/{entryId} {
      allow read, write: if isCompanyMember(companyId);
    }
  }
}
