rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    // Users can only read and write their own profile
    match /users/{userId} {
      allow read, write: if isUserAuthenticated() && request.auth.uid == userId;
    }
    
    // Clients can be read by any authenticated user, but only created/updated by them.
    // This allows for things like searching clients in forms.
    match /clients/{clientId} {
      allow read, write: if isUserAuthenticated();
    }
    
    match /clients/{clientId}/{document=**} {
       allow read, write: if isUserAuthenticated();
    }
    
    // All other collections are only accessible by authenticated users.
    // More specific rules can be added per collection if needed.
    match /orders/{orderId} {
        allow read, write: if isUserAuthenticated();
    }
    match /drivers/{driverId} {
        allow read, write: if isUserAuthenticated();
    }
    match /origins/{originId} {
        allow read, write: if isUserAuthenticated();
    }
    match /destinos/{destinoId} {
        allow read, write: if isUserAuthenticated();
    }
    match /vehicles/{vehicleId} {
        allow read, write: if isUserAuthenticated();
    }
    match /financialCategories/{categoryId} {
        allow read, write: if isUserAuthenticated();
    }
    match /financialEntries/{entryId} {
        allow read, write: if isUserAuthenticated();
    }
     match /financialEntries/{path=**} {
        allow list: if isUserAuthenticated();
    }
  }
}
