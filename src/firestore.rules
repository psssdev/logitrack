
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    // Os utilizadores só podem ler e escrever no seu próprio perfil
    match /users/{userId} {
      allow read, write: if isUserAuthenticated() && request.auth.uid == userId;
    }

    // Regra genérica para TODAS as outras coleções e documentos.
    // O {path=**} garante que a regra se aplique a qualquer caminho,
    // permitindo operações de 'list' nas coleções.
    match /{path=**} {
       allow read, write: if isUserAuthenticated();
    }
  }
}
