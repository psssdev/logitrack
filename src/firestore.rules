
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção de utilizadores: apenas o próprio utilizador pode aceder aos seus dados.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra genérica para todas as outras coleções.
    // Permite que qualquer utilizador autenticado leia e escreva em qualquer documento.
    // Isto é apropriado para uma aplicação de empresa única (single-tenant).
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
